<table class="ui celled table">
    <thead>
        <th colspan="5">
            <div class="ui top attached menu">
                <div class="header item">Your portfolio</div>
                <div class="right menu">
                    <div class="item">
                        <div class="ui transparent icon input">
                            <input id="quote-add" type="text" placeholder="Add quote..">
                            <div class="ui tiny basic circular icon button"><i class="search icon"></i></div>
                        </div>
                    </div>
                </div>
            </div>
        </th>
        <tr>
            <th>Symbol</th>
            <th>Company</th>
            <th>Price</th>
            <th>Change</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for quote in quotes %}
        <tr id="stock-row-{{ quote.id }}">
            <td>{{ quote.symbol }}</td>
            <td>{{ quote.companyName }}</td>
            <td><i class="dollar icon">{{ quote.lastTradePrice|number_format(2) }}</i></td>
            <td>{{ quote.changeInPercent }}</td>
            <td>
                <button class="ui icon tiny stock-remove button" data-id="{{ quote.id }}">
                    <i class="delete icon"></i> Remove
                </button>
            </td>
        </tr>
    {% endfor %}
    </tbody>
    <tfoot>
    </tfoot>
</table>