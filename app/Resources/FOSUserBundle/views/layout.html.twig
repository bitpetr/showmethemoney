        /*}*/
        /*body > .grid {*/
            /*height: 100%;*/
        /*}*/
        .image {
            margin-top: -100px;
        }
        .column {
            max-width: 450px;
        }
    </style>
{% endblock %}
{% block content %}
    {% if app.request.hasPreviousSession %}
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="ui {{ type }} message">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    {% endif %}

    <div class="row">
        {% block fos_user_content %}
        {% endblock fos_user_content %}
    </div>
{% endblock %}